@model BloodDonationManagement.Models.Donor

@{
    ViewData["Title"] = "Delete Donor";
}

<h2>Delete Donor</h2>

<h3>Are you sure you want to delete this?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.FullName</dd>

        <dt class="col-sm-2">Blood Group</dt>
        <dd class="col-sm-10">@Model.BloodGroup</dd>

        <dt class="col-sm-2">District</dt>
        <dd class="col-sm-10">@Model.District?.District_Name_Eng</dd>

        <dt class="col-sm-2">Thana</dt>
        <dd class="col-sm-10">@Model.Thana?.Thana_Name_Eng</dd>

        <dt class="col-sm-2">Contact No</dt>
        <dd class="col-sm-10">@Model.ContactNo</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="DonorId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
