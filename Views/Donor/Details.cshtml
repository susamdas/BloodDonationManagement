@model BloodDonationManagement.Models.Donor

@{
    ViewData["Title"] = "Donor Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Donor Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.FullName</dd>

        <dt class="col-sm-2">Blood Group</dt>
        <dd class="col-sm-10">@Model.BloodGroup</dd>

        <dt class="col-sm-2">District</dt>
        <dd class="col-sm-10">@Model.District?.Name</dd>

        <dt class="col-sm-2">Thana</dt>
        <dd class="col-sm-10">@Model.Thana?.Name</dd>

        <dt class="col-sm-2">Contact No</dt>
        <dd class="col-sm-10">@Model.ContactNo</dd>

        <dt class="col-sm-2">Last Donation Date</dt>
        <dd class="col-sm-10">@Model.LastDonationDate?.ToString("dd-MM-yyyy")</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@(Model.Status ? "Active" : "Inactive")</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.DonorId" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
