<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Blood Donation System</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        :root {
            --primary-color: #dc3545;
            --secondary-color: #6c757d;
            --success-color: #198754;
        }

        .navbar-brand {
            font-weight: 700;
            color: var(--primary-color) !important;
        }

        .navbar-nav .nav-link {
            font-weight: 500;
            margin: 0 10px;
            transition: color 0.3s ease;
        }

            .navbar-nav .nav-link:hover {
                color: var(--primary-color) !important;
            }

        .hero-section {
            background: linear-gradient(135deg, #dc3545 0%, #fd7e14 100%);
            color: white;
            padding: 60px 0;
            margin-bottom: 40px;
        }

            .hero-section h1 {
                font-size: 2.5rem;
                font-weight: 700;
                margin-bottom: 15px;
            }

            .hero-section p {
                font-size: 1.2rem;
                margin-bottom: 30px;
            }

        .btn-custom {
            background: var(--primary-color);
            border: none;
            padding: 12px 30px;
            font-weight: 600;
            border-radius: 50px;
            transition: all 0.3s ease;
        }

            .btn-custom:hover {
                background: #b02a37;
                transform: translateY(-2px);
                box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);
            }

        .footer {
            background: #2c3e50;
            color: white;
            padding: 40px 0 20px;
            margin-top: 60px;
        }

            .footer h5 {
                color: var(--primary-color);
                margin-bottom: 20px;
            }

            .footer a {
                color: #bdc3c7;
                text-decoration: none;
                transition: color 0.3s ease;
            }

                .footer a:hover {
                    color: white;
                }

        .blood-drop {
            color: var(--primary-color);
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0%

        {
            transform: scale(1);
        }

        50% {
            transform: scale(1.1);
        }

        100% {
            transform: scale(1);
        }

        }

        .notification-badge {
            position: absolute;
            top: -8px;
            right: -8px;
            background: var(--primary-color);
            color: white;
            border-radius: 50%;
            width: 20px;
            height: 20px;
            font-size: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <i class="fas fa-tint blood-drop me-2"></i>
                Blood Donation
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">
                            <i class="fas fa-home me-1"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Search", "BloodSearch")">
                            <i class="fas fa-search me-1"></i> Find Donors
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-hand-holding-medical me-1"></i> Blood Requests
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Create", "Request")">
                                    <i class="fas fa-plus me-2"></i> Create Request
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Index", "Request")">
                                    <i class="fas fa-list me-2"></i> View Requests
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>

                <ul class="navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <!-- Authenticated User Menu -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle position-relative" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-bell me-1"></i> Notifications
                                <span class="notification-badge">3</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><h6 class="dropdown-header">Recent Notifications</h6></li>
                                <li>
                                    <a class="dropdown-item" href="#">
                                        <small class="text-muted">2 min ago</small><br>
                                        New blood request in your area
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">
                                        <small class="text-muted">1 hour ago</small><br>
                                        Your donation request was fulfilled
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-center" href="@Url.Action("Index", "Notification")">View All</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle me-1"></i> @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Profile", "User")">
                                        <i class="fas fa-user me-2"></i> My Profile
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("MyRequests", "Request")">
                                        <i class="fas fa-clipboard-list me-2"></i> My Requests
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("DonationHistory", "User")">
                                        <i class="fas fa-history me-2"></i> Donation History
                                    </a>
                                </li>
                                @if (User.IsInRole("Admin"))
                                {
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Index", "Admin")">
                                            <i class="fas fa-cogs me-2"></i> Admin Panel
                                        </a>
                                    </li>
                                }
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    @using (Html.BeginForm("Logout", "Account", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item">
                                            <i class="fas fa-sign-out-alt me-2"></i> Logout
                                        </button>
                                    }
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <!-- Guest Menu -->
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login", "Account")">
                                <i class="fas fa-sign-in-alt me-1"></i> Login
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-custom text-white ms-2" href="@Url.Action("Register", "Account")">
                                <i class="fas fa-user-plus me-1"></i> Register as Donor
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main role="main">
        @if (ViewBag.ShowHero != false)
        {
            <!-- Hero Section (only show on home page) -->
            <section class="hero-section text-center">
                <div class="container">
                    <h1><i class="fas fa-tint blood-drop me-3"></i>Save Lives, Donate Blood</h1>
                    <p class="lead">Connect blood donors with those in need across Bangladesh</p>
                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <a href="@Url.Action("Search", "BloodSearch")" class="btn btn-light btn-lg me-3">
                                <i class="fas fa-search me-2"></i> Find Blood Donors
                            </a>
                            <a href="@Url.Action("Create", "Request")" class="btn btn-outline-light btn-lg">
                                <i class="fas fa-plus me-2"></i> Request Blood
                            </a>
                        </div>
                    </div>
                </div>
            </section>
        }

        <!-- Alert Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="container">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="container">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }

        @if (TempData["InfoMessage"] != null)
        {
            <div class="container">
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    @TempData["InfoMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }

        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5><i class="fas fa-tint blood-drop me-2"></i>Blood Donation</h5>
                    <p>Connecting blood donors with those in need across Bangladesh. Every drop counts in saving lives.</p>
                    <div class="social-links">
                        <a href="#" class="me-3"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="me-3"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="me-3"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
                <div class="col-md-2">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li><a href="@Url.Action("About", "Home")">About Us</a></li>
                        <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>
                        <li><a href="@Url.Action("FAQ", "Home")">FAQ</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5>For Donors</h5>
                    <ul class="list-unstyled">
                        <li><a href="@Url.Action("Register", "Account")">Become a Donor</a></li>
                        <li><a href="@Url.Action("Profile", "User")">Update Profile</a></li>
                        <li><a href="@Url.Action("DonationHistory", "User")">Donation History</a></li>
                        <li><a href="@Url.Action("Guidelines", "Home")">Donation Guidelines</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5>Emergency</h5>
                    <p><i class="fas fa-phone me-2"></i> Hotline: 01714-496737</p>
                    <p><i class="fas fa-envelope me-2"></i> susam.gbit@gmail.com</p>
                    <p><i class="fas fa-clock me-2"></i> 24/7 Available</p>
                </div>
            </div>
            <hr class="mt-4">
            <div class="row">
                <div class="col-md-6">
                    <p>&copy; 2025 BloodConnect BD. All rights reserved. Created by Susam</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <a href="@Url.Action("Privacy", "Home")" class="me-3">Privacy Policy</a>
                    <a href="@Url.Action("Terms", "Home")">Terms of Service</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom JavaScript -->
    <script>
        // Auto-dismiss alerts after 5 seconds
        window.setTimeout(function() {
            $(".alert").fadeTo(500, 0).slideUp(500, function(){
                $(this).remove();
            });
        }, 5000);

        // Add active class to current nav item
        $(document).ready(function() {
            var path = window.location.pathname;
            $('.navbar-nav .nav-link').each(function() {
                if ($(this).attr('href') === path) {
                    $(this).addClass('active');
                }
            });
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>