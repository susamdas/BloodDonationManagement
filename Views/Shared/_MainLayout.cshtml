<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - BloodConnect BD</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!-- Eye-catching Custom CSS -->
    <style>
        :root {
            /* Vibrant Blood-themed Colors */
            --blood-red: #e53e3e;
            --deep-red: #c53030;
            --crimson: #dc2626;
            --rose: #f56565;
            --pink: #ed64a6;
            --purple: #9f7aea;
            --indigo: #667eea;
            --teal: #38b2ac;
            --emerald: #48bb78;
            --orange: #ed8936;
            --yellow: #ecc94b;
            /* Dark theme */
            --dark-bg: #0f0f23;
            --dark-card: #1a1b3e;
            --dark-text: #ffffff;
            --light-text: #a0aec0;
            /* Gradients */
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #c471ed 100%);
            --danger-gradient: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 50%, #ff4757 100%);
            --success-gradient: linear-gradient(135deg, #4ecdc4 0%, #44a08d 50%, #096dd9 100%);
            --warning-gradient: linear-gradient(135deg, #feca57 0%, #ff9ff3 50%, #54a0ff 100%);
            --hero-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 25%, #f093fb 50%, #f5576c 75%, #4facfe 100%);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: var(--dark-bg);
            color: var(--dark-text);
            overflow-x: hidden;
            position: relative;
        }

            /* Animated Background */
            body::before {
                content: '';
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: var(--hero-gradient);
                background-size: 400% 400%;
                animation: gradientShift 15s ease infinite;
                z-index: -2;
            }

            body::after {
                content: '';
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: radial-gradient(circle at 20% 50%, rgba(255, 107, 107, 0.3) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(102, 126, 234, 0.3) 0%, transparent 50%), radial-gradient(circle at 40% 80%, rgba(237, 100, 166, 0.3) 0%, transparent 50%);
                z-index: -1;
            }

        @@keyframes gradientShift {
            0%

        {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }

        }

        /* Vibrant Navbar */
        .navbar {
            background: rgba(15, 15, 35, 0.95);
            backdrop-filter: blur(20px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            transition: all 0.3s ease;
        }

            .navbar.scrolled {
                background: rgba(15, 15, 35, 0.98);
                box-shadow: 0 12px 40px rgba(0, 0, 0, 0.4);
            }

        .navbar-brand {
            font-weight: 900;
            font-size: 1.8rem;
            background: var(--danger-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            display: flex;
            align-items: center;
            gap: 0.7rem;
            transition: all 0.3s ease;
        }

            .navbar-brand:hover {
                transform: scale(1.05);
                filter: drop-shadow(0 0 10px rgba(255, 107, 107, 0.5));
            }

        .brand-icon {
            width: 45px;
            height: 45px;
            background: var(--danger-gradient);
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.3rem;
            box-shadow: 0 4px 15px rgba(255, 107, 107, 0.3);
            animation: pulse 2s infinite;
        }

        .navbar-nav .nav-link {
            font-weight: 600;
            color: var(--light-text) !important;
            margin: 0 0.8rem;
            padding: 0.8rem 1.2rem !important;
            border-radius: 15px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }

            .navbar-nav .nav-link::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: var(--primary-gradient);
                transition: all 0.4s ease;
                z-index: -1;
            }

            .navbar-nav .nav-link:hover,
            .navbar-nav .nav-link.active {
                color: white !important;
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
            }

                .navbar-nav .nav-link:hover::before,
                .navbar-nav .nav-link.active::before {
                    left: 0;
                }

        /* Eye-catching Buttons */
        .btn-vibrant {
            font-weight: 700;
            border-radius: 25px;
            padding: 1rem 2rem;
            border: none;
            font-size: 1rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

            .btn-vibrant::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
                transition: left 0.6s;
            }

            .btn-vibrant:hover::before {
                left: 100%;
            }

        .btn-blood {
            background: var(--danger-gradient);
            color: white;
        }

            .btn-blood:hover {
                transform: translateY(-3px) scale(1.05);
                box-shadow: 0 12px 35px rgba(255, 107, 107, 0.4);
                color: white;
            }

        .btn-success-vibrant {
            background: var(--success-gradient);
            color: white;
        }

            .btn-success-vibrant:hover {
                transform: translateY(-3px) scale(1.05);
                box-shadow: 0 12px 35px rgba(78, 205, 196, 0.4);
                color: white;
            }

        .btn-outline-vibrant {
            background: transparent;
            color: white;
            border: 2px solid rgba(255, 255, 255, 0.3);
            backdrop-filter: blur(10px);
        }

            .btn-outline-vibrant:hover {
                background: white;
                color: var(--dark-bg);
                border-color: white;
                transform: translateY(-3px) scale(1.05);
                box-shadow: 0 12px 35px rgba(255, 255, 255, 0.3);
            }

        /* Spectacular Hero Section */
        .hero-section {
            padding: 8rem 0 6rem;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .hero-content {
            background: rgba(26, 27, 62, 0.8);
            backdrop-filter: blur(25px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 30px;
            padding: 4rem 3rem;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.5), inset 0 1px 0 rgba(255, 255, 255, 0.1);
            max-width: 900px;
            margin: 0 auto;
            position: relative;
            animation: slideInUp 1s ease-out;
        }

            .hero-content::before {
                content: '';
                position: absolute;
                top: -50%;
                left: -50%;
                width: 200%;
                height: 200%;
                background: conic-gradient(from 0deg, transparent, rgba(255, 107, 107, 0.1), transparent, rgba(102, 126, 234, 0.1), transparent);
                animation: rotate 20s linear infinite;
                z-index: -1;
            }

        .hero-title {
            font-size: clamp(2.5rem, 6vw, 4.5rem);
            font-weight: 900;
            margin-bottom: 1.5rem;
            background: linear-gradient(135deg, #ff6b6b 0%, #4ecdc4 25%, #45b7d1 50%, #f093fb 75%, #feca57 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-shadow: 0 0 30px rgba(255, 107, 107, 0.3);
            animation: textGlow 3s ease-in-out infinite alternate;
        }

        .hero-subtitle {
            font-size: 1.4rem;
            color: var(--light-text);
            margin-bottom: 2.5rem;
            font-weight: 400;
            line-height: 1.6;
        }

        @@keyframes textGlow {
            0%

        {
            filter: drop-shadow(0 0 10px rgba(255, 107, 107, 0.3));
        }

        100% {
            filter: drop-shadow(0 0 20px rgba(255, 107, 107, 0.6));
        }

        }

        @@keyframes slideInUp {
            from

        {
            opacity: 0;
            transform: translateY(50px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        @@keyframes rotate {
            0%

        {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }

        }

        /* Stunning Cards */
        .vibrant-card {
            background: rgba(26, 27, 62, 0.9);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 25px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3), inset 0 1px 0 rgba(255, 255, 255, 0.1);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            overflow: hidden;
            position: relative;
        }

            .vibrant-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 2px;
                background: var(--primary-gradient);
                transition: all 0.4s ease;
            }

            .vibrant-card:hover {
                transform: translateY(-10px) scale(1.02);
                box-shadow: 0 30px 60px rgba(0, 0, 0, 0.4), 0 0 40px rgba(102, 126, 234, 0.2);
            }

                .vibrant-card:hover::before {
                    left: 0;
                }

        /* Colorful Dropdown */
        .dropdown-menu {
            background: rgba(26, 27, 62, 0.95);
            backdrop-filter: blur(25px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.5);
            padding: 1rem;
            margin-top: 0.5rem;
        }

        .dropdown-item {
            border-radius: 15px;
            padding: 1rem 1.5rem;
            margin: 0.3rem 0;
            font-weight: 600;
            color: var(--light-text);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .dropdown-item::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: var(--primary-gradient);
                transition: all 0.3s ease;
                z-index: -1;
            }

            .dropdown-item:hover {
                color: white;
                transform: translateX(5px);
            }

                .dropdown-item:hover::before {
                    left: 0;
                }

        /* Pulsating Notification Badge */
        .notification-badge {
            position: absolute;
            top: -10px;
            right: -10px;
            background: var(--danger-gradient);
            color: white;
            border-radius: 50%;
            width: 25px;
            height: 25px;
            font-size: 12px;
            font-weight: 700;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 15px rgba(255, 107, 107, 0.4);
            animation: pulse 2s infinite;
            border: 2px solid var(--dark-bg);
        }

        @@keyframes pulse {
            0%

        {
            transform: scale(1);
            box-shadow: 0 4px 15px rgba(255, 107, 107, 0.4);
        }

        50% {
            transform: scale(1.1);
            box-shadow: 0 6px 25px rgba(255, 107, 107, 0.6);
        }

        100% {
            transform: scale(1);
            box-shadow: 0 4px 15px rgba(255, 107, 107, 0.4);
        }

        }

        /* Vibrant Alerts */
        .alert {
            border: none;
            border-radius: 20px;
            backdrop-filter: blur(15px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
            border-left: 4px solid;
            font-weight: 600;
            padding: 1.5rem;
        }

        .alert-success {
            background: rgba(78, 205, 196, 0.15);
            color: #4ecdc4;
            border-left-color: #4ecdc4;
        }

        .alert-danger {
            background: rgba(255, 107, 107, 0.15);
            color: #ff6b6b;
            border-left-color: #ff6b6b;
        }

        .alert-info {
            background: rgba(102, 126, 234, 0.15);
            color: #667eea;
            border-left-color: #667eea;
        }

        .alert-warning {
            background: rgba(254, 202, 87, 0.15);
            color: #feca57;
            border-left-color: #feca57;
        }

        /* Spectacular Footer */
        .spectacular-footer {
            background: rgba(15, 15, 35, 0.95);
            backdrop-filter: blur(25px);
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            margin-top: 6rem;
            padding: 4rem 0 2rem;
            position: relative;
        }

            .spectacular-footer::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 2px;
                background: var(--primary-gradient);
            }

        .footer-brand {
            font-weight: 900;
            font-size: 1.8rem;
            background: var(--danger-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 1rem;
        }

        .footer-link {
            color: var(--light-text);
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
            padding: 0.5rem 0;
            display: block;
            position: relative;
        }

            .footer-link::before {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                width: 0;
                height: 2px;
                background: var(--primary-gradient);
                transition: width 0.3s ease;
            }

            .footer-link:hover {
                color: white;
                transform: translateX(10px);
            }

                .footer-link:hover::before {
                    width: 30px;
                }

        .social-icon {
            width: 50px;
            height: 50px;
            background: var(--primary-gradient);
            color: white;
            border-radius: 15px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            text-decoration: none;
            margin: 0 0.8rem;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            font-size: 1.2rem;
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
        }

            .social-icon:hover {
                transform: translateY(-5px) scale(1.1) rotate(10deg);
                color: white;
                box-shadow: 0 15px 40px rgba(102, 126, 234, 0.4);
            }

        /* Mobile Optimization */
        @@media (max-width: 768px) {
            .hero-content

        {
            margin: 0 1rem;
            padding: 3rem 2rem;
        }

        .navbar-nav .nav-link {
            margin: 0.3rem 0;
        }

        .btn-vibrant {
            width: 100%;
            margin: 0.5rem 0;
        }

        }

        /* Scrollbar */
        ::-webkit-scrollbar {
            width: 12px;
        }

        ::-webkit-scrollbar-track {
            background: rgba(0,0,0,0.2);
        }

        ::-webkit-scrollbar-thumb {
            background: var(--primary-gradient);
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.3);
        }

            ::-webkit-scrollbar-thumb:hover {
                background: var(--danger-gradient);
            }
    </style>
</head>
<body>
    <!-- Vibrant Navigation -->
    <nav class="navbar navbar-expand-lg fixed-top">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <div class="brand-icon">
                    <i class="fas fa-tint"></i>
                </div>
                BloodConnect BD
            </a>

            <button class="navbar-toggler border-0 text-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <i class="fas fa-bars"></i>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">
                            <i class="fas fa-home me-2"></i>Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Search", "BloodSearch")">
                            <i class="fas fa-search me-2"></i>Find Donors
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-hand-holding-medical me-2"></i>Blood Requests
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Create", "Request")">
                                    <i class="fas fa-plus me-2"></i>Create Request
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Index", "Request")">
                                    <i class="fas fa-list me-2"></i>View Requests
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Donor")">
                            <i class="fas fa-users me-2"></i>Donors
                        </a>
                    </li>
                </ul>

                <ul class="navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <!-- Notifications -->
                        <li class="nav-item dropdown">
                            <a class="nav-link position-relative" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-bell"></i>
                                <span class="notification-badge">3</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><h6 class="dropdown-header text-warning fw-bold">🔔 Recent Notifications</h6></li>
                                <li>
                                    <a class="dropdown-item" href="#">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-tint text-danger me-3"></i>
                                            <div>
                                                <div class="fw-bold">Urgent Blood Request</div>
                                                <small class="text-muted">A+ needed in Dhaka Medical</small>
                                            </div>
                                        </div>
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-center fw-bold text-primary" href="#">View All</a></li>
                            </ul>
                        </li>

                        <!-- User Menu -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle me-2"></i>@(User.Identity.Name ?? "User")
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Profile", "User")">
                                        <i class="fas fa-user me-2"></i>My Profile
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("MyRequests", "Request")">
                                        <i class="fas fa-clipboard-list me-2"></i>My Requests
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("DonationHistory", "User")">
                                        <i class="fas fa-history me-2"></i>Donation History
                                    </a>
                                </li>
                                @if (User.IsInRole("Admin"))
                                {
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Index", "Admin")">
                                            <i class="fas fa-cogs me-2"></i>Admin Panel
                                        </a>
                                    </li>
                                }
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    @using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { @class = "d-inline" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item">
                                            <i class="fas fa-sign-out-alt me-2"></i>Logout
                                        </button>
                                    }
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <!-- Guest Menu -->
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login", "Account")">
                                <i class="fas fa-sign-in-alt me-2"></i>Login
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-vibrant btn-blood ms-2" href="@Url.Action("Register", "Account")">
                                <i class="fas fa-user-plus me-2"></i>Join as Donor
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main role="main" style="padding-top: 100px;">
        @if (ViewBag.ShowHero != false)
        {
            <!-- Spectacular Hero Section -->
            <section class="hero-section">
                <div class="container">
                    <div class="hero-content">
                        <h1 class="hero-title">
                            💉 Save Lives, Donate Blood! 🩸
                        </h1>
                        <p class="hero-subtitle">
                            🇧🇩 Connect with blood donors across Bangladesh<br>
                            Every drop counts • Every donation saves lives • Be a hero today
                        </p>
                        <div class="d-flex flex-wrap gap-4 justify-content-center">
                            <a href="@Url.Action("Search", "BloodSearch")" class="btn btn-vibrant btn-success-vibrant">
                                <i class="fas fa-search me-2"></i>Find Blood Donors
                            </a>
                            <a href="@Url.Action("Create", "Request")" class="btn btn-vibrant btn-blood">
                                <i class="fas fa-plus me-2"></i>Request Blood
                            </a>
                            <a href="@Url.Action("Register", "Account")" class="btn btn-vibrant btn-outline-vibrant">
                                <i class="fas fa-heart me-2"></i>Become a Hero
                            </a>
                        </div>
                    </div>
                </div>
            </section>
        }

        <!-- Alert Messages -->
        <div class="container">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    <strong>Success!</strong> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Error!</strong> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["InfoMessage"] != null)
            {
