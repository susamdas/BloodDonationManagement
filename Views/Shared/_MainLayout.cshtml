    <!-- Eye-catching JavaScript -->
    <script>
        $(document).ready(function() {
            // Navbar scroll effect
            $(window).scroll(function() {
                if ($(this).scrollTop() > 50) {
                    $('.navbar').addClass('scrolled');
                } else {
                    $('.navbar').removeClass('scrolled');
                }
            });

            // Auto-dismiss alerts with animation
            setTimeout(function() {
                $('.alert').each(function() {
                    $(this).fadeOut('slow', function() {
                        $(this).slideUp();
                    });
                });
            }, 6000);

            // Active nav link
            var currentPath = window.location.pathname;
            $('.navbar-nav .nav-link').each(function() {
                if ($(this).attr('href') === currentPath) {
                    $(this).addClass('active');
                }
            });

            // Smooth scrolling
            $('a[href*="#"]:not([href="#"])').click(function() {
                if (location.pathname.replace(/^\//, '') == this.pathname.replace(/^\//, '') && location.hostname == this.hostname) {
                    var target = $(this.hash);
                    target = target.length ? target : $('[name=' + this.hash.slice(1) + ']');
                    if (target.length) {
                        $('html, body').animate({
                            scrollTop: target.offset().top - 100
                        }, 1000);
                        return false;
                    }
                }
            });

            // Button loading effects
            $('.btn-vibrant').click(function() {
                var btn = $(this);
                if (!btn.hasClass('no-loading') && !btn.prop('disabled')) {
                    var originalHtml = btn.html();
                    btn.html('<i class="fas fa-spinner fa-spin me-2"></i>Loading...');
                    btn.prop('disabled', true);

                    setTimeout(function() {
                        btn.html(originalHtml);
                        btn.prop('disabled', false);
                    }, 2000);
                }
            });

            // Notification badge animation
            setInterval(function() {
                $('.notification-badge').each(function() {
                    $(this).addClass('animate__animated animate__pulse');
                    setTimeout(() => {
                        $(this).removeClass('animate__animated animate__pulse');
                    }, 1000);
                });
            }, 5000);

            // Random notification count (demo)
            function updateNotifications() {
                var count = Math.floor(Math.random() * 8) + 1;
                $('.notification-badge').text(count);
                $('.notification-badge').css('display', count > 0 ? 'flex' : 'none');
            }

            // Update every 30 seconds
            setInterval(updateNotifications, 30000);

            // Page load animations
            setTimeout(function() {
                $('.hero-content').addClass('animate__animated animate__fadeInUp');
            }, 300);

            // Parallax effect for hero section
            $(window).scroll(function() {
                var scrolled = $(this).scrollTop();
                var parallax = $('.hero-section');
                var speed = scrolled * 0.5;
                parallax.css('transform', 'translateY(' + speed + 'px)');
            });

            // Dynamic background color change
            function changeBackgroundColor() {
                var colors = [
                    'linear-gradient(135deg, #667eea 0%, #764ba2 25%, #f093fb 50%, #f5576c 75%, #4facfe 100%)',
                    'linear-gradient(135deg, #ff6b6b 0%, #4ecdc4 25%, #45b7d1 50%, #f093fb 75%, #feca57 100%)',
                    'linear-gradient(135deg, #a8edea 0%, #fed6e3 25%, #d299c2 50%, #fef9d7 75%, #667eea 100%)',
                    'linear-gradient(135deg, #ff9a9e 0%, #fecfef 25%, #fecfef 50%, #f093fb 75%, #4facfe 100%)'
                ];

                var randomColor = colors[Math.floor(Math.random() * colors.length)];
                $('body::before').css('background', randomColor);
            }

            // Change background every 2 minutes
            setInterval(changeBackgroundColor, 120000);

            // Add sparkle effects on hover
            $('.btn-vibrant, .social-icon').hover(
                function() {
                    $(this).append('<span class="sparkle">✨</span>');
                },
                function() {
                    $(this).find('.sparkle').fadeOut(300, function() {
                        $(this).remove();
                    });
                }
            );

            // Toast notifications (if needed)
            function showToast(message, type) {
                var toastHtml = `
                    <div class="toast align-items-center text-white bg-${type} border-0" role="alert">
                        <div class="d-flex">
                            <div class="toast-body">
                                ${message}
                            </div>
                            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                        </div>
                    </div>
                `;

                $('.toast-container').append(toastHtml);
                $('.toast').last().toast('show');
            }

            // Example usage: showToast('Welcome to BloodConnect BD! 🩸', 'success');
        });

        // Add some extra magic ✨
        document.addEventListener('DOMContentLoaded', function() {
            // Create floating particles
            function createParticle() {
                const particle = document.createElement('div');
                particle.style.position = 'fixed';
                particle.style.width = '4px';
                particle.style.height = '4px';
                particle.style.background = '#ff6b6b';
                particle.style.borderRadius = '50%';
                particle.style.pointerEvents = 'none';
                particle.style.zIndex = '1000';
                particle.style.opacity = '0.7';
                particle.style.left = Math.random() * window.innerWidth + 'px';
                particle.style.top = window.innerHeight + 'px';

                document.body.appendChild(particle);

                // Animate particle
                let yPos = window.innerHeight;
                const speed = Math.random() * 3 + 1;
                const xMovement = (Math.random() - 0.5) * 2;

                function animateParticle() {
                    yPos -= speed;
                    particle.style.top = yPos + 'px';
                    particle.style.left = (parseFloat(particle.style.left) + xMovement) + 'px';

                    if (yPos < -10) {
                        particle.remove();
                    } else {
                        requestAnimationFrame(animateParticle);
                    }
                }

                requestAnimationFrame(animateParticle);
            }

            // Create particles occasionally
            setInterval(createParticle, 3000);
        });
    </script>

